<?xml version="1.0" encoding="UTF-8"?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.soundscoutfx.LoginController"
      alignment="CENTER" spacing="10" style="-fx-padding: 20;">
    <Label text="Login" style="-fx-font-size: 18px;" />
    
    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    
    <Button text="Login" onAction="#handleLogin" />
    <Label fx:id="errorMessage" style="-fx-text-fill: red;" />
</VBox>

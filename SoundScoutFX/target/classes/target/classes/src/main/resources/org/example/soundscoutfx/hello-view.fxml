<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.soundscoutfx.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <HBox alignment="CENTER" spacing="20">
    <children>
      <ImageView fitHeight="50.0" fitWidth="150.0">
        <image>
          <Image url="@../../../icons/soundscout.png"/>
        </image>
        <HBox.margin>
          <Insets top="20.0" right="0.0" bottom="0.0" left="0.0"/>
        </HBox.margin>
      </ImageView>
    </children>
  </HBox>

  <Label text="Welcome to SoundScout!" style="-fx-font-size: 24px; -fx-text-fill: #34495e;"/>

  <Button fx:id="loginButton" text="Login" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px;" onAction="#onLoginClick"/>
  <Button text="Signup" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 16px;" onAction="#onSignupClick"/>
  <Button text="Continue as Guest" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 16px;" onAction="#onGuestClick"/>
</VBox>

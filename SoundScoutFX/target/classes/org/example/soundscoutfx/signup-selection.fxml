<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="750.0" spacing="20.0" style="-fx-background-color: #F3EEF5;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.soundscoutfx.SignupSelectionController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER" spacing="20">
        <children>
            <ImageView fitHeight="50.0" fitWidth="150.0">
                <image>
                    <Image url="@../../../icons/soundscout.png" />
                </image>
                <HBox.margin>
                    <Insets bottom="0.0" left="0.0" right="0.0" top="20.0" />
                </HBox.margin>
            </ImageView>
        </children>
    </HBox>

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Signup as:" />
    <Button onAction="#handleArtistSignup" style="-fx-background-color: #65558F; -fx-text-fill: white; -fx-font-size: 16px;" text="Artist" />
    <Button onAction="#handleUserSignup" style="-fx-background-color: #65558F; -fx-text-fill: white; -fx-font-size: 16px;" text="User" />

    <Button onAction="#handleLoginRedirect" style="-fx-background-color: #E8DEF8; -fx-border-color: D6C8EB;" text="Already have an account? Log in here!" textFill="#4e238d" />
    <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: #E8DEF8; -fx-border-color: #D6C8EB;" text="Back to Home" textFill="#4e238d" />

</VBox>

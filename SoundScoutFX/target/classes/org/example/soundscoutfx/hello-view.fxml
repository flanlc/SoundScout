<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="750.0" spacing="20.0" style="-fx-background-color: #1A062A;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.soundscoutfx.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <HBox alignment="CENTER" spacing="20">
    <children>
      <ImageView fitHeight="50.0" fitWidth="150.0">
        <image>
          <Image url="@../../../icons/soundscout.png" />
        </image>
        <HBox.margin>
          <Insets bottom="0.0" left="0.0" right="0.0" top="20.0" />
        </HBox.margin>
      </ImageView>
    </children>
  </HBox>

  <Label style="-fx-font-size: 24px; -fx-text-fill: white;" text="Welcome to SoundScout!" textFill="WHITE" />

  <Button fx:id="loginButton" onAction="#onLoginClick" style="-fx-background-color: #6750A4; -fx-text-fill: white; -fx-font-size: 16px;" text="Login" />
  <Button onAction="#onSignupClick" style="-fx-background-color: #6750A4; -fx-text-fill: white; -fx-font-size: 16px;" text="Signup" />
  <Button onAction="#onGuestClick" style="-fx-background-color: #6750A4; -fx-text-fill: white; -fx-font-size: 16px;" text="Continue as Guest" />
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.soundscoutfx.LoggedHomeController">
    <top>
        <HBox alignment="CENTER" spacing="20">
            <children>
                <ImageView fitHeight="50.0" fitWidth="150.0">
                    <image>
                        <Image url="@../../../icons/soundscout.png"/>
                    </image>
                    <HBox.margin>
                        <Insets top="20.0" right="0.0" bottom="20.0" left="0.0"/>
                    </HBox.margin>
                </ImageView>
            </children>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <children>
                <Label fx:id="welcomeLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                <Button text="Available Artists" onAction="#navigateToDashboard"/>
                <Button text="Logout" onAction="#handleLogout"/>
            </children>
        </VBox>
    </center>
</BorderPane>

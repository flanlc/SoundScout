<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Label?>
<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/fxml"
      fx:controller="org.example.soundscoutfx.EditUserProfileController" xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER" spacing="20">
        <children>
            <ImageView fitHeight="50.0" fitWidth="150.0">
                <image>
                    <Image url="@../../../icons/soundscout.png"/>
                </image>
                <HBox.margin>
                    <Insets top="20.0" right="0.0" bottom="0.0" left="0.0"/>
                </HBox.margin>
            </ImageView>
        </children>
    </HBox>

    <Text text="Edit User Profile" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <TextField fx:id="firstNameField" promptText="First Name"/>
    <TextField fx:id="lastNameField" promptText="Last Name"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <TextField fx:id="cityField" promptText="City"/>
    <TextField fx:id="zipCodeField" promptText="Zip Code"/>

    <Label fx:id="successMessage" style="-fx-text-fill: green;" />

    <Button text="Save Changes" onAction="#handleSave"/>
    <Button text="Back to Home" onAction="#handleBackButton"/>

</VBox>
